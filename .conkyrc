conky.config = {
	double_buffer = true,
	own_window = true,
	own_window_transparent = false,
	own_window_type = 'desktop',
	own_window_hints = 'undecorated,sticky,skip_taskbar,skip_pager',
	draw_borders = false,
	draw_graph_borders = true,
	border_width = 1,
	border_inner_margin = 3,
	draw_shades = false,
	gap_x = 0,
	gap_y = 4,
	alignment = 'top_middle',
	update_interval = 1,
	default_color = '9e9e9e',
	own_window_colour = 'eeeeee',
	use_xft = true,
	font = 'Source Code Pro for Powerline:medium:size=9',

	override_utf8_locale = true,

	use_spacer = 'none',
	minimum_width = 1920
}

conky.text = [[
${alignc}Desktop: ${color 424242}${desktop_name}${color}\
  Date: ${color 424242}${time %d/%m/%y}${color}\
  Time: ${color 424242}${time %H:%M:%S}${color}\
  Uptime: ${color 424242}${uptime_short}${color}\
  Cpu: ${color 424242}${cpu}%${color}\
  Ram: ${color 424242}${memfree}${color}\
  Net usage: ${color 424242}${exec net-used}${color}
]]
